<nav:Page xmlns="https://github.com/avaloniaui"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:nav="clr-namespace:WpfLikeAvaloniaNavigation;assembly=WpfLikeAvaloniaNavigation"
          xmlns:pr14Avalonia="clr-namespace:ПрактическаяРабота4_Зевакин_Шпилько"
          mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
          x:Class="ПрактическаяРабота4_Зевакин_Шпилько.Pages.FirstPage">
    <Grid Background="#F0F4F8">

        <Border Background="White"
                CornerRadius="16"
                BoxShadow="0 4 24 0 #1A000000"
                Padding="40"
                Width="340"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel Spacing="12">

                <TextBlock Text="Навигация"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2D3748"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>

                <Button Content="Вычисление первой функции"
                        Click="Button_OnClick"
                        Background="#4299E1"
                        Foreground="White"
                        CornerRadius="8"
                        Padding="12,10"
                        HorizontalAlignment="Stretch">
                    <ToolTip.Tip>
                        <ToolTip Content="Перейти к вычислению первой функции"/>
                    </ToolTip.Tip>
                </Button>

                <Button Content="Вычисление второй функции"
                        Click="Button_OnClick1"
                        Background="#4299E1"
                        Foreground="White"
                        CornerRadius="8"
                        Padding="12,10"
                        HorizontalAlignment="Stretch">
                    <ToolTip.Tip>
                        <ToolTip Content="Перейти к вычислению второй функции"/>
                    </ToolTip.Tip>
                </Button>

                <Button Content="Вычисление третьей функции"
                        Click="Button_OnClick2"
                        Background="#4299E1"
                        Foreground="White"
                        CornerRadius="8"
                        Padding="12,10"
                        HorizontalAlignment="Stretch">
                    <ToolTip.Tip>
                        <ToolTip Content="Перейти к вычислению третьей функции"/>
                    </ToolTip.Tip>
                </Button>

            </StackPanel>
        </Border>

    </Grid>
</nav:Page>